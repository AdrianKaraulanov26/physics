    <main class="container">
        <h1><i class="fas fa-stopwatch"></i> Study Timer</h1>
        <p class="subtitle">Pomodoro timer and exam simulation for effective study sessions</p>

        <div class="timer-container">
            <!-- Main Timer Display -->
            <div class="timer-display">
                <div class="time-circle" id="timeCircle">
                    <div class="time-text" id="timeDisplay">25:00</div>
                    <div class="timer-label" id="timerLabel">Focus Time</div>
                </div>
                
                <div class="timer-controls">
                    <button onclick="startTimer()" class="btn btn-success" id="startBtn">
                        <i class="fas fa-play"></i> Start
                    </button>
                    <button onclick="pauseTimer()" class="btn btn-warning" id="pauseBtn" style="display: none;">
                        <i class="fas fa-pause"></i> Pause
                    </button>
                    <button onclick="resetTimer()" class="btn">
                        <i class="fas fa-redo"></i> Reset
                    </button>
                </div>
            </div>

            <!-- Timer Presets -->
            <div class="timer-presets">
                <h3><i class="fas fa-clock"></i> Quick Presets</h3>
                <div class="preset-grid">
                    <button onclick="setTimer(25, 'Pomodoro Focus')" class="preset-btn">
                        <div class="preset-time">25:00</div>
                        <div class="preset-label">Pomodoro</div>
                    </button>
                    <button onclick="setTimer(5, 'Short Break')" class="preset-btn">
                        <div class="preset-time">05:00</div>
                        <div class="preset-label">Short Break</div>
                    </button>
                    <button onclick="setTimer(15, 'Long Break')" class="preset-btn">
                        <div class="preset-time">15:00</div>
                        <div class="preset-label">Long Break</div>
                    </button>
                    <button onclick="setTimer(90, 'Full Practice Exam')" class="preset-btn">
                        <div class="preset-time">90:00</div>
                        <div class="preset-label">Full Exam</div>
                    </button>
                </div>
            </div>

            <!-- Custom Timer -->
            <div class="custom-timer">
                <h3><i class="fas fa-sliders-h"></i> Custom Timer</h3>
                <div class="custom-controls">
                    <div class="input-group">
                        <label>Minutes:</label>
                        <input type="number" id="customMinutes" min="1" max="180" value="25">
                    </div>
                    <div class="input-group">
                        <label>Seconds:</label>
                        <input type="number" id="customSeconds" min="0" max="59" value="0">
                    </div>
                    <div class="input-group">
                        <label>Label:</label>
                        <input type="text" id="customLabel" placeholder="Study Session">
                    </div>
                    <button onclick="setCustomTimer()" class="btn">Set Custom Timer</button>
                </div>
            </div>

            <!-- Pomodoro Sessions -->
            <div class="sessions-tracker">
                <h3><i class="fas fa-chart-bar"></i> Today's Sessions</h3>
                <div class="sessions-list" id="sessionsList">
                    <p>No sessions completed today.</p>
                </div>
                <div class="session-stats">
                    <div class="stat">
                        <div class="stat-value" id="completedSessions">0</div>
                        <div class="stat-label">Sessions</div>
                    </div>
                    <div class="stat">
                        <div class="stat-value" id="totalFocusTime">0</div>
                        <div class="stat-label">Focus Minutes</div>
                    </div>
                    <button onclick="clearSessions()" class="btn-small">Clear Day</button>
                </div>
            </div>

            <!-- Timer Alerts -->
            <div class="timer-alerts">
                <h3><i class="fas fa-bell"></i> Alert Settings</h3>
                <div class="alert-options">
                    <label>
                        <input type="checkbox" id="soundAlert" checked>
                        Play sound when timer ends
                    </label>
                    <label>
                        <input type="checkbox" id="notificationAlert" checked>
                        Show browser notification
                    </label>
                    <label>
                        <input type="checkbox" id="autoStartBreak">
                        Auto-start break after focus
                    </label>
                </div>
                <div class="alert-sound">
                    <label>Alert Sound:</label>
                    <select id="alertSound">
                        <option value="bell">Bell</option>
                        <option value="beep">Beep</option>
                        <option value="chime">Chime</option>
                    </select>
                    <button onclick="testAlert()" class="btn-small">Test Sound</button>
                </div>
            </div>
