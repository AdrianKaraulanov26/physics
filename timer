    <script src="../script.js"></script>
    <script>
        // Timer variables
        let timer;
        let timeLeft = 25 * 60; // 25 minutes in seconds
        let totalTime = 25 * 60;
        let isRunning = false;
        let isBreak = false;
        let completedSessions = 0;
        let totalFocusTime = 0;

        // DOM Elements
        const timeDisplay = document.getElementById('timeDisplay');
        const timerLabel = document.getElementById('timerLabel');
        const startBtn = document.getElementById('startBtn');
        const pauseBtn = document.getElementById('pauseBtn');
        const timeCircle = document.getElementById('timeCircle');

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadSessions();
            updateTimerDisplay();
            requestNotificationPermission();
        });

        // Timer functions
        function startTimer() {
            if (isRunning) return;
            
            isRunning = true;
            startBtn.style.display = 'none';
            pauseBtn.style.display = 'inline-block';
            
            timer = setInterval(function() {
                timeLeft--;
                updateTimerDisplay();
                
                if (timeLeft <= 0) {
                    timerComplete();
                }
            }, 1000);
        }

        function pauseTimer() {
            isRunning = false;
            clearInterval(timer);
            startBtn.style.display = 'inline-block';
            pauseBtn.style.display = 'none';
        }

        function resetTimer() {
            pauseTimer();
            timeLeft = totalTime;
            updateTimerDisplay();
        }

        function updateTimerDisplay() {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            timeDisplay.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            
            // Update circle progress
            const progress = ((totalTime - timeLeft) / totalTime) * 100;
            timeCircle.style.background = `conic-gradient(var(--primary) ${progress}%, var(--light-gray) ${progress}%)`;
        }

        function timerComplete() {
            clearInterval(timer);
            isRunning = false;
            startBtn.style.display = 'inline-block';
            pauseBtn.style.display = 'none';
            
            // Play alert sound
            if (document.getElementById('soundAlert').checked) {
                playAlertSound();
            }
            
            // Show notification
            if (document.getElementById('notificationAlert').checked) {
                showNotification();
            }
            
            // Add to sessions if it was a focus session
            if (!isBreak && timerLabel.textContent.includes('Focus')) {
                addSession();
            }
            
            // Auto-start break if enabled
            if (!isBreak && document.getElementById('autoStartBreak').checked) {
                setTimeout(() => {
                    setTimer(5, 'Short Break');
                    startTimer();
                }, 1000);
            }
        }

        // Preset timers
        function setTimer(minutes, label) {
            pauseTimer();
            timeLeft = minutes * 60;
            totalTime = minutes * 60;
            timerLabel.textContent = label;
            isBreak = label.includes('Break');
            updateTimerDisplay();
        }

        function setCustomTimer() {
            const minutes = parseInt(document.getElementById('customMinutes').value) || 0;
            const seconds = parseInt(document.getElementById('customSeconds').value) || 0;
            const label = document.getElementById('customLabel').value || 'Custom Timer';
            
            setTimer(minutes + seconds/60, label);
        }

        // Session tracking
        function addSession() {
            completedSessions++;
            totalFocusTime += totalTime / 60; // Convert to minutes
            
            const session = {
                time: new Date().toLocaleTimeString(),
                duration: totalTime / 60,
                label: timerLabel.textContent
            };
            
            // Save to localStorage
            let today = new Date().toDateString();
            let sessions = JSON.parse(localStorage.getItem('pomodoroSessions') || '{}');
            if (!sessions[today]) sessions[today] = [];
            sessions[today].push(session);
            localStorage.setItem('pomodoroSessions', JSON.stringify(sessions));
            
            updateSessionDisplay();
        }

        function loadSessions() {
            let today = new Date().toDateString();
            let sessions = JSON.parse(localStorage.getItem('pomodoroSessions') || '{}');
            
            if (sessions[today]) {
                completedSessions = sessions[today].length;
                totalFocusTime = sessions[today].reduce((sum, session) => sum + session.duration, 0);
            }
            
            updateSessionDisplay();
        }

        function updateSessionDisplay() {
            document.getElementById('completedSessions').textContent = completedSessions;
            document.getElementById('totalFocusTime').textContent = Math.round(totalFocusTime);
            
            let today = new Date().toDateString();
            let sessions = JSON.parse(localStorage.getItem('pomodoroSessions') || '{}');
            const sessionsList = document.getElementById('sessionsList');
            
            if (!sessions[today] || sessions[today].length === 0) {
                sessionsList.innerHTML = '<p>No sessions completed today.</p>';
                return;
            }
            
            sessionsList.innerHTML = sessions[today].map(session => `
                <div class="session-item">
                    <div class="session-time">${session.time}</div>
                    <div class="session-duration">${Math.round(session.duration)} min</div>
                    <div class="session-label">${session.label}</div>
                </div>
            `).join('');
        }

        function clearSessions() {
            if (confirm('Clear all sessions for today?')) {
                let today = new Date().toDateString();
                let sessions = JSON.parse(localStorage.getItem('pomodoroSessions') || '{}');
                delete sessions[today];
                localStorage.setItem('pomodoroSessions', JSON.stringify(sessions));
                
                completedSessions = 0;
                totalFocusTime = 0;
                updateSessionDisplay();
            }
        }

        // Alert functions
        function playAlertSound() {
            const sound = document.getElementById('alertSound').value;
            const audio = new Audio();
            
            switch(sound) {
                case 'bell':
                    audio.src = 'https://assets.mixkit.co/sfx/preview/mixkit-bell-notification-933.mp3';
                    break;
                case 'beep':
                    audio.src = 'https://assets.mixkit.co/sfx/preview/mixkit-retro-game-emergency-alarm-1000.mp3';
                    break;
                case 'chime':
                    audio.src = 'https://assets.mixkit.co/sfx/preview/mixkit-correct-answer-tone-2870.mp3';
                    break;
            }
            
            audio.play();
        }

        function testAlert() {
            playAlertSound();
        }

        function showNotification() {
            if (!("Notification" in window)) return;
            
            if (Notification.permission === "granted") {
                new Notification("Timer Complete!", {
                    body: `${timerLabel.textContent} has finished!`,
                    icon: "../assets/icon.png"
                });
            }
        }

        function requestNotificationPermission() {
            if (!("Notification" in window)) return;
            
            if (Notification.permission === "default") {
                Notification.requestPermission();
            }
        }
    </script>
</body>
</html>
